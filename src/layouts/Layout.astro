---
import { ViewTransitions } from 'astro:transitions';
import Background3D from '../components/react/Background3d.jsx';
import { getImage } from "astro:assets";
import heroImg from "../assets/hero.webp";
import '../styles/global.css';

const optimizedHero = await getImage({ src: heroImg, format: 'webp' });
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content="Sufyan Liaqat - Professional Full Stack Developer specialized in MERN Stack, React Native, and FastAPI. Building scalable, production-ready applications." />
  <meta name="keywords" content="Sufyan Liaqat, Full Stack Developer, MERN Stack, React Native, FastAPI, Portfolio, Lahore, Software Engineer" />
  <meta name="author" content="Sufyan Liaqat" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href="https://sufyanliaqat.me" />
  
  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="theme-color" content="#10b981" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://sufyanliaqat.me" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content="Professional Full Stack Developer Portfolio - Building scalable web and mobile applications." />
  <meta property="og:image" content="/hero.webp" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="https://sufyanliaqat.me" />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content="Professional Full Stack Developer Portfolio - Building scalable web and mobile applications." />
  <meta property="twitter:image" content="/hero.webp" />
  
  <!-- ViewTransitions go HERE in the <head> - enables smooth page animations -->
  <ViewTransitions />

  <!-- Preload LCP targets -->
  <link rel="preload" href={optimizedHero.src} as="image" type="image/webp" />
</head>
<body class="min-h-screen text-foreground overflow-x-hidden">
  
  <!-- Background3D stays as React, loads on IDLE to prioritize LCP -->
  <Background3D client:idle />
  
  <!-- Page content from index.astro goes here -->
  <slot />
  
  <style is:global>
    section {
      content-visibility: auto;
      contain-intrinsic-size: 100vh;
    }
  </style>
</body>
</html>
