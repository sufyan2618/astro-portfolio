---
import { ViewTransitions } from 'astro:transitions';
import Background3D from '../components/react/Background3d.jsx';
import { getImage } from "astro:assets";
import heroImg from "../assets/hero.webp";
import '../styles/global.css';

const optimizedHero = await getImage({ src: heroImg, format: 'webp' });
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  
  <!-- ViewTransitions go HERE in the <head> - enables smooth page animations -->
  <ViewTransitions />

  <!-- Preload LCP targets -->
  <link rel="preload" href={optimizedHero.src} as="image" type="image/webp" />
</head>
<body class="min-h-screen text-foreground overflow-x-hidden">
  
  <!-- Background3D stays as React, loads on IDLE to prioritize LCP -->
  <Background3D client:idle />
  
  <!-- Page content from index.astro goes here -->
  <slot />
  
</body>
</html>
