---
// This top section (between ---) is JavaScript that runs at BUILD TIME
// It's like the code outside your return() in React

import Layout from '../layouts/Layout.astro';

// Import static components as Astro
import Navbar from '../components/Navbar.astro';
import HeroSection from '../components/HeroSection.astro';
import AboutSection from '../components/AboutSection.astro';
import SkillsSection from '../components/SkillsSection.astro';
import ExperienceSection from '../components/ExperienceSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';

// Import interactive components as React (if they need state/interactivity)
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
---

<!-- This is the HTML that gets rendered -->
<Layout title="Sufyan Liaqat - Full Stack Developer">
  
  <Navbar />
  
  <main>
    <HeroSection />
    <AboutSection />
    <SkillsSection />
    <ExperienceSection />
    <ProjectsSection />
    
    <!-- If ContactSection has forms with validation, keep as React -->
    <ContactSection client:visible />
  </main>
  
  <Footer />
  
</Layout>
