---
// ProjectsSection.astro
import { ArrowRight, ExternalLink, Github, Star, Eye } from "lucide-react";
import { projects } from "../lib/data";
import { Image } from "astro:assets";

const projectImages = import.meta.glob('../assets/projects/*.{webp,png,jpg,svg}', { eager: true });
---

<section
  id="projects"
  class="relative min-h-screen flex items-start justify-center overflow-hidden px-4 py-20"
>
  <div class="container mx-auto max-w-7xl relative z-10 h-full flex flex-col justify-center py-12">
    <!-- Section Header -->
    <div 
      class="section-header text-center mb-12"
    >
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-heading mb-4">
        <span class="text-white">Featured</span>
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-emerald-400 to-teal-500"> Projects</span>
      </h2>

      <p class="text-gray-300 text-base max-w-2xl mx-auto leading-relaxed">
        Here are some of my recent projects showcasing expertise in full-stack development,
        AI integration, and modern web technologies.
      </p>

      <div class="w-20 h-1 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-full mx-auto mt-6"></div>
    </div>

    <!-- Projects Container -->
    <div 
      class="projects-container relative"
    >
      <!-- Scroll Navigation -->
      <div class="flex justify-between items-center mb-6">
        <div class="flex gap-3">
          <button
            id="scroll-left-btn"
            class="p-2.5 bg-white/5 backdrop-blur-md border border-white/10 rounded-full hover:border-emerald-600 hover:bg-emerald-600/20 hover:text-emerald-400 transition-all duration-300 hover:scale-110"
            aria-label="Scroll left"
          >
            <ArrowRight class="w-5 h-5 text-gray-400 hover:text-emerald-400 rotate-180 transition-colors duration-300" />
          </button>
          <button
            id="scroll-right-btn"
            class="p-2.5 bg-white/5 backdrop-blur-md border border-white/10 rounded-full hover:border-teal-600 hover:bg-teal-600/20 hover:text-teal-400 transition-all duration-300 hover:scale-110"
            aria-label="Scroll right"
          >
            <ArrowRight class="w-5 h-5 text-gray-400 hover:text-teal-400 transition-colors duration-300" />
          </button>
        </div>

        <div class="text-sm text-gray-400">
          Scroll to explore â†’
        </div>
      </div>

      <!-- Horizontal Scrolling Projects -->
      <div
        id="projects-scroll-container"
        class="flex gap-6 overflow-x-auto scrollbar-hide pb-4"
        style="scrollbar-width: none; -ms-overflow-style: none;"
      >
        {projects.map((project, index) => (
          <div
            class="project-card flex-none w-80 sm:w-96 bg-white/5 backdrop-blur-md border border-white/10 rounded-xl overflow-hidden hover:border-emerald-600 hover:shadow-lg hover:shadow-emerald-500/20 transition-all duration-500 group"
            style={{'--delay': `${index * 100}ms`}}
          >
            <!-- Featured Badge -->
            {project.featured && (
              <div class="absolute top-3 right-3 z-20">
                <div class="bg-gradient-to-r from-emerald-600 to-teal-600 rounded-full p-2 shadow-lg shadow-emerald-500/50 animate-pulse">
                  <Star class="w-4 h-4 text-white" />
                </div>
              </div>
            )}

            <!-- Image Container -->
            <div class="relative h-48 overflow-hidden">
              <Image
                src={(projectImages[`../assets${project.image}`] as any)?.default || (projectImages[`../assets/projects/${project.image.split('/').pop()}`] as any)?.default}
                alt={project.title}
                width={400}
                height={200}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />

              <!-- Hover Actions -->
              <div class="absolute inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center gap-4 opacity-0 group-hover:opacity-100 transition-all duration-300">
                <a
                  href={project.demoUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-3 bg-white/10 border border-white/20 rounded-full hover:border-emerald-500 hover:bg-emerald-600 hover:shadow-lg hover:shadow-emerald-500/50 transition-all duration-300 hover:scale-110"
                  aria-label={`View ${project.title} demo`}
                >
                  <Eye class="w-5 h-5 text-white" />
                </a>
                <a
                  href={project.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="p-3 bg-white/10 border border-white/20 rounded-full hover:border-teal-500 hover:bg-teal-600 hover:shadow-lg hover:shadow-teal-500/50 transition-all duration-300 hover:scale-110"
                  aria-label={`View ${project.title} on GitHub`}
                >
                  <Github class="w-5 h-5 text-white" />
                </a>
              </div>

              <!-- Category Badge -->
              <div class="absolute top-3 left-3">
                <span class="px-3 py-1.5 bg-black/50 backdrop-blur-md border border-emerald-500/30 rounded-full text-xs text-emerald-400 font-medium">
                  {project.category}
                </span>
              </div>
            </div>

            <!-- Content -->
            <div class="p-5">
              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.slice(0, 4).map((tag) => (
                  <span
                    class="px-2.5 py-1 bg-white/5 border border-white/10 rounded-md text-xs text-gray-300 hover:border-teal-500 hover:text-teal-400 transition-all duration-300 hover:scale-110"
                  >
                    {tag}
                  </span>
                ))}
                {project.tags.length > 4 && (
                  <span class="px-2.5 py-1 bg-white/5 border border-white/10 rounded-md text-xs text-gray-400">
                    +{project.tags.length - 4}
                  </span>
                )}
              </div>

              <!-- Title -->
              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-emerald-400 transition-colors">
                {project.title}
              </h3>

              <p class="text-gray-400 text-sm leading-relaxed mb-4">
                {project.description.length > 120
                  ? `${project.description.substring(0, 120)}...`
                  : project.description}
              </p>

              <!-- Links -->
              <div class="flex justify-between items-center pt-4 border-t border-white/10">
                <div class="flex gap-3">
                  <a
                    href={project.demoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-emerald-400 transition-all duration-300 hover:scale-125"
                    aria-label={`View ${project.title} demo`}
                  >
                    <ExternalLink size={18} />
                  </a>
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-teal-400 transition-all duration-300 hover:scale-125"
                    aria-label={`View ${project.title} on GitHub`}
                  >
                    <Github size={18} />
                  </a>
                </div>

                <div class="text-sm text-emerald-500 font-semibold">
                  {String(index + 1).padStart(2, '0')}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA Button -->
    <div 
      class="cta-section text-center mt-16"
    >
      <a
        href="https://github.com/sufyan2618"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-emerald-600 to-teal-600 hover:shadow-lg hover:shadow-emerald-500/40 rounded-full font-semibold text-white transition-all duration-300 hover:scale-105"
      >
        Explore All Projects on GitHub
        <ArrowRight class="w-5 h-5" />
      </a>
    </div>
  </div>
</section>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  /* Smooth scroll behavior */
  #projects-scroll-container {
    scroll-behavior: smooth;
  }

  /* Pure CSS animations */
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slideInRight {
    from { opacity: 0; transform: translateX(50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .section-header { animation: slideUp 0.8s ease-out forwards; }
  .projects-container { animation: slideUp 0.8s ease-out 0.2s forwards; opacity: 0; }
  .project-card { 
    animation: slideInRight 0.8s ease-out var(--delay) forwards; 
    opacity: 0; 
  }
  .cta-section { animation: slideUp 0.8s ease-out 0.4s forwards; opacity: 0; }

  /* Gradient fixes */
  .bg-linear-to-r {
    background-image: linear-gradient(to right, var(--tw-gradient-stops));
  }
</style>

<script>
  // Horizontal scroll and other functionality
  const scrollLeftBtn = document.getElementById('scroll-left-btn');
  const scrollRightBtn = document.getElementById('scroll-right-btn');
  const scrollContainer = document.getElementById('projects-scroll-container');

  if (scrollLeftBtn && scrollRightBtn && scrollContainer) {
    scrollLeftBtn.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: -350, behavior: 'smooth' });
    });

    scrollRightBtn.addEventListener('click', () => {
      scrollContainer.scrollBy({ left: 350, behavior: 'smooth' });
    });

    // Optional: Add keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        scrollContainer.scrollBy({ left: -350, behavior: 'smooth' });
      } else if (e.key === 'ArrowRight') {
        scrollContainer.scrollBy({ left: 350, behavior: 'smooth' });
      }
    });

    // Optional: Add mouse drag scrolling
    let isDown = false;
    let startX: number;
    let scrollLeft: number;

    scrollContainer.addEventListener('mousedown', (e) => {
      isDown = true;
      scrollContainer.style.cursor = 'grabbing';
      startX = e.pageX - scrollContainer.offsetLeft;
      scrollLeft = scrollContainer.scrollLeft;
    });

    scrollContainer.addEventListener('mouseleave', () => {
      isDown = false;
      scrollContainer.style.cursor = 'grab';
    });

    scrollContainer.addEventListener('mouseup', () => {
      isDown = false;
      scrollContainer.style.cursor = 'grab';
    });

    scrollContainer.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - scrollContainer.offsetLeft;
      const walk = (x - startX) * 2; // Scroll speed multiplier
      scrollContainer.scrollLeft = scrollLeft - walk;
    });

    // Set initial cursor
    scrollContainer.style.cursor = 'grab';
  }
</script>
